        var $link = $(this);
        var $parent = $link.closest('.attraction-item');

        if (!$parent.hasClass('.active')) {
            $('section#atrakcje-regionow .attraction-item').removeClass('active');
            $parent.addClass('active');

            //scroll to section
            $body.animate({
                scrollTop: $('section#atrakcje-regionow').offset().top
            }, {
                duration: 1000,
                step: function (now, fx) {
                    if (now == fx.end) {
                        $(this).stop();
                    }
                }
            });
        }

        return false;
